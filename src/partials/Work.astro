---
import json from "../data/work.json";

const work = json.work;
---

<section>
	<h2 class="fs-secondary-heading space-bottom">Work</h2>
	<div class="work">
		{work.map(workItem => (
			<div class="work-item">
				<h5 class="fs-small-heading">{workItem.title}</h5>
				<p><small>{workItem.startTime} - {workItem.endTime}</small></p>
				<p>{workItem.position}</p>
			</div>
		))}
	</div>
	
</section>

<style>
	.work {
		display: flex;
		justify-content: center;
		align-items: center;
		flex-direction: column;
		width: 100%;
		position: relative;
	}

	.work::after {
		content: "";
		position: absolute;
		background-color: var(--clr-neutral-900);
		width: 2px;
		height: 100%;
		top: 0;
		bottom: 0;
		left: 0;
		right: 0;
		margin: auto;
		z-index: -1;
	}

	.work-item {
		width: 50%;
		text-align: right;
		margin-right: auto;
		padding-right: 50px;
		padding-bottom: 10px;
		position: relative;
	}
	
	.work-item:nth-child(2n) {
		text-align: left;
		margin-right: 0;
		margin-left: auto;
		padding-right: 0;
		padding-left: 50px;
	}

	.work-item::before {
		content: "";
		position: absolute;
		background-color: black;
		height: 2px;
		width: 60%;
		bottom: 0;
		right: 50px;
	}

	.work-item::after {
		content: "";
		position: absolute;
		width: 10px;
		height: 10px;
		border: none;
		border-radius: 1000vw;
		background-color: black;
		right: -5px;
		top: 0;
		bottom: 0;
		margin: auto 0;
	}

	.work-item:nth-child(2n)::after {
		right: auto;
		left: -5px;
	}

	.work-item:nth-child(2n)::before {
		right: auto;
		left: 50px;
	}

	.work-item:nth-child(1)::after {
		background-color: white;
		border: 2px solid var(--clr-neutral-900);
	}

	@media (max-width: 40em) {
		.work-item {
			width: 80%;
			margin-right: 10%;
			padding-right: 10%;
			margin-top: var(--sp-200);
		}
		
		.work-item:nth-child(2n) {
			text-align: right;
			margin-left: 0;
			margin-right: 10%;
			padding-right: 10%;
			padding-left: 0;
		}

		.work-item::before {
			width: 70%;
			right: 35px;
		}

		.work-item:nth-child(2n)::before {
			right: 35px;
			left: auto;
		}

		.work-item:nth-child(2n)::after {
			right: -5px;
			left: auto;
		}

		.work::after {
			margin-right: 14.8%; /* TODO: Make better */
		}
	}
</style>